---
const { isDesktop, isMobile } = Astro.props
const basePath = import.meta.env.BASE_URL;
---

<nav class="nav-bar" class:list={{"desktop": isDesktop, "mobile": isMobile}}>
    <div class="menu--wrapper">
      <ul class="menu--list">
        <li class="menu--item">
          <a href=`${basePath}`>Inicio</a>
        </li>
        <li class="menu--item">
          <a href=`${basePath}planes`>Planes</a>
        </li>
        <li class="menu--item">
          <a href=`${basePath}contacto`>Contactanos</a>
        </li>
        <li class="menu--item">
          <a href=`${basePath}blog`>Blog</a>
        </li>
        <li class="menu--item">
          <a href=`${basePath}nosotros`>Nosotros</a>
        </li>
      </ul>
    </div>
  </nav>


<style>
  nav {
    flex-direction: column;
    width: 100%;
    justify-content: space-around;
    align-items: center;
  }
  
  .desktop {
    display: none;
  }
 
  .mobile {
    display: flex;
    min-height: 100%;
    justify-content: flex-start;
    align-items: center;
    margin-top: 1.5rem;
  }
  
  .menu--list {
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      align-items: center;
      list-style: none;
      padding-left: 0px;
      gap: 1rem;
      width: 100%;
  }

  .menu--item a {
    text-decoration: none;
    color: var(--system-primary-backgroundColor-1);
    font-family: var(--ff-base);
    font-weight: 500;
    font-size: 1.2rem;
  }

  .mobile .menu--item a {
    color: white;
  }



@media screen and (width >= 720px) {
    nav {
      justify-content: flex-end;
      flex-direction: row;
    }

    .desktop {
      display: flex;
    }
 
    .mobile {
      display: none;
    }

    .menu--wrapper {
      width: 100%;
      display: inline-block;
    }

    .menu--list {
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: center;
      gap: 1rem;
    }

    .menu--item {
      transition: ease 0.3s;
    }
    
    .menu--item:hover {
      transform: scale(1.1);
    }
}

@media screen and (width >= 1150px) {
  .menu--list {
    justify-content: flex-end;
  }


}

</style>