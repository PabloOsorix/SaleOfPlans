---
import { Image } from 'astro:assets'
import '@styles/global.css'
const contactEmail = "atencionalcliente@plancitos.com"
const basePath = import.meta.env.BASE_URL;
---

<footer class="pd-mobile">
    <nav class="w-max">
        <section class="client-service--section">
          <div class="wrapper">
            <div class="container">
              <h2 class="">Servicio al cliente</h2>
              <ul>
                <li><a class="" href=`${basePath}nosotros`>nosotros</a></li>
              </ul>
            </div>
          </div>
        </section>

        <section class="contact--section">
          <div class="wrapper">
            <div class="container">
              <h2 class="">Contactanos</h2>
              <ul>
                <li><a class="" href=`${basePath}contacto`>quiero que me contacten</a></li>
                <li><a class="phone" href="tel:+573232213828">+57 323-221-3828</a></li>
                <li><a class="mail" href=`mailto:${contactEmail}`>{contactEmail}</a></li>
              </ul>
            </div>
          </div>
        </section>

        <section class="terms-conditions--section">
          <div class="wrapper">
            <div class="container">
              <h2 class="">Politicas, Terminos y<br class="break-line"> Condiciones</h2>
              <ul>
                <li><a class="" href=`${basePath}terminos-y-condiciones`>terminos y condiciones</a></li>
              </ul>
            </div>
          </div>
        </section>

      </nav>

      <section class="follow-us--section">
        <div class="wrapper">
          <h2 class="">SÃ­guenos</h2>
          <ul>
            <li><Image src=`${basePath}icons/fb-logo-svg.svg` alt="logo cliqueable de facebook" width="25" height="25"/></li>
            <li><Image src=`${basePath}icons/insta-logo-svg-3.svg` alt="logo cliqueable de instagram" width="27.5" height="25"/></li>
            <li><Image src=`${basePath}icons/tiktok-logo-svg.svg` alt="logo cliqueable de tiktok" width="25" height="25"/></li>
          </ul>
        </div>
      </section>

      <h3 class="copyright">Copyright 2024, Skyline Technologies</h3>


</footer>

<style>

  footer {
      padding-top: 20px;
      bottom: 0px;
      background: var(--system-primary-backgroundColor-1);
      width: 100%;
  }

  nav {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    grid-template-rows: repeat(3, 1fr);
  }

  section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

  }

  .wrapper {
    width: 100%;
  }

  div > h2 {
    color: white;
    font-size: 1.3rem;
    margin-top: 0px;
    margin-bottom: .5rem;
    font-family: var(--ff-base-2);
    font-weight: 600;
  }


  ul {
    padding-left: 2px;
    color: white;
    margin-top: 0px;
    list-style: none;
    gap: 5px;
    display: flex;
    flex-direction: column;
  }



  li a {
    text-decoration: none;
    font-family: var(--ff-base-2);
    font-weight: 300;
    font-size: 1.1rem;

  }
  li::marker {
    color: var(--system-primary-backgroundColor-1);
  }

  li a,
  h3.copyright
   {
    color: white;
  }

  .client-service--section {
    grid-column: 1;
    grid-row: 1;
  }

  .contact--section {
    grid-column: 1;
    grid-row: 2;
  }

  li a.phone,
  li a.mail  {
    text-decoration: underline;
  }

  .terms-conditions--section {
    grid-column: 1;
    grid-row: 3;
  }

  .follow-us--section {
    margin-top: 1rem;
  }

  .follow-us--section h2 {
    text-align: center;
  }

  .follow-us--section ul {
    list-style: none;
    display: flex;
    gap: .5rem;
    padding-left: 0px;
    justify-content: center;
    align-items: center;
    flex-direction: row;

  }

  li img {
    width: 25px;
  }

  .follow-us--section ul li:nth-child(2) img {
    width: 27.5px;
  }



  h3.copyright {
    font-size: 0.9rem;
    font-weight: 300;
    font-family: var(--ff-base);
    text-align: center;
    margin: 0.5rem 0rem 2rem;
  }




@media screen and (width >= 720px) {
  
  nav {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(1, 1fr);
    max-width: 750px;
    justify-content: center;

  }

  div.wrapper {
    width: 100%;
    display: flex;
    justify-content: center;
    flex-direction: column;
  }



  section {
    width: 100%;
    align-items: center;
    justify-content: flex-start;
  }
  section h2 {
    align-self: left;
    font-size: 1.1rem;
  }

  .contact--section {
    grid-column: 3;
    grid-row: 1;
  }

  .contact--section h2 {
    width: 180px;
  }

  .terms-conditions--section {
    grid-column: 2;
    grid-row: 1;
  }

  .follow-us--section ul {
    padding-left: 0px;
    justify-content: center;
    align-items: center;
    padding-left: 20px;

  }

}


@media screen and (width >= 1150px) {
  nav {
    max-width: 1300px;
  }

  div.wrapper {
    width: 100%;
    align-items: center;
    justify-content: center;
  }

  .container {
    display: flex;
    flex-direction: column;
    width: 67%;
  }

  
  .client-service--section h2,
  .terms-conditions--section h2,
  .contact--section h2 {
    width: 100%
    margin-top: 0px;
    font-size: 1.3rem;
  }

  .break-line {
    display:  none;
  }

  ul {
    padding-left: 0px;
  }




  .follow-us--section {
    grid-column: 4;
    grid-row: 1;
  }

}

    
</style>