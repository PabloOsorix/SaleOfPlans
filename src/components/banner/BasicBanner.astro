---
import Image from "astro/components/Image.astro";
const basePath = import.meta.env.BASE_URL;
const { image } = Astro.props;
---

<section class="banner--section">
  <Image
    src=`${basePath}${image}`
    alt=""
    width="1600"
    height="600"
    loading="eager"
  />
  <section class="over__container">
    <div class="content w-max">
      <slot />
    </div>
  </section>
</section>

<style>
  :root {
    --max-banner-height: 400px;
  }
  .banner--section {
    width: 100%;
    background-color: var(--clr-pry-base-1);
    position: relative;
    max-height: var(--max-banner-height);
  }

  .banner--section img {
    width: 100%;
    max-height: var(--max-banner-height);
  }

  .over__container {
    position: absolute;
    top: 0px;
    justify-self: center;
    align-self: center;
    width: 100%;
    height: 100%;
  }
  .content {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(3, 1fr);
    width: 100%;
    height: 100%;
  }

  @media screen and (width >= 720px) {
    .banner--section {
      width: 100%;
      background-color: var(--clr-pry-base-1);
      position: relative;
      max-height: var(--max-banner-height);
    }

    .banner--section img {
      width: 100%;
      max-height: var(--max-banner-height);
    }

    .title {
      color: white;
      font-size: 5rem;
      font-family: var(--ff-base);
      font-weight: 700;
      margin: 0px;
    }
  }
</style>
