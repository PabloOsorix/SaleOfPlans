---
import { Image } from 'astro:assets';
import PromoFourOverlayContent from '@components/carousel/promoFourPeople/PromoFourOverlayContent.astro';
const basePath = import.meta.env.BASE_URL;


type Slide = {
  image: string;
  price;
  titleIsBlue: boolean
};

interface Props {
  slides: Slide[];
}

const { slides }: Props = Astro.props;
---


{ slides.map((slide, index) =>
  <li class="splide__slide">
    <Image src={basePath + slide.image} alt={"Slide" + index}  width="1360" height="765" loading="eager"/>
    <PromoFourOverlayContent
      titleIsBlue={slide.titleIsBlue}
      price={slide.price}
    >
    </PromoFourOverlayContent>
  </li>
)}


<style>
  .splide__slide,
  .splide__slide img {
    height: 500px;
    width: 100%;
  }

  .splide__slide img {
    filter: brightness(0.6);
    object-fit: cover;
  }

  #splide-slide02 img {
    filter: brightness(0.5);
  }

  @media screen and (width >= 1150px) {
    
  .splide {
    max-heigth: 500px;
  }

  .splide__slide,
  .splide__slide img {
    height: 500px;
    width: 100%;
  }
  .splide__slide img {
    object-fit: cover;
  }
  }
</style>