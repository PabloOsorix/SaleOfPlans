---
import BaseOverlayContent from "@components/carousel/base/BaseOverlayContent.astro";
import { formatPriceToCOP } from "src/utils/currency";

const {
    price = 0,
    titleIsBlue = false,
} = Astro.props

---



<BaseOverlayContent overlayClass="overlay" wrapperClass="wrapper">

    <div class="promo__wrapper">
        <h2 class="number " class:list={{"blue": titleIsBlue}}>4</h2>
        <div class="promo-items-wrapper">
            <p class="people">Personas</p>
            <p class="breakfast">Desayunos</p>
            <p class="lunch">Almuerzos</p>
        </div>
    </div>
    <div class="price-conditions__wrapper">
      <h2 class="price">
        ${formatPriceToCOP(price)}
        <span class="currency">COP</span>
      </h2>
      <p class="conditions">2 d√≠as 1 noche</p>
    </div>
</BaseOverlayContent>


<style>
  :global(.overlay) {
    position: absolute;
    bottom: 0px;
    width: 100%;
    height: 100%
  }


  .title {
    color: white;
  }

  .promo__wrapper {
    display: flex;
    align-items: center;
    width: 100%;
    justify-content: center;
    gap: 20px;
    margin-top: 2rem;
  }

  h2.number {
    color: var(--clr-pry-base-1);
    font-family: var(--ff-base);
    font-weight: 800;
    font-size: 10rem;
    font-style:italic;
    margin: 0px;
  }

  .promo-items-wrapper {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }
  .promo-items-wrapper p {
    margin: 0px;
    color: white;
    font-size: 1.5rem;
    font-family: var(--ff-base);
    font-weight: 600;
  }

  .price-conditions__wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    justify-content: center;
  }


  h2.price {
    color: var(--clr-pry-base-1);
    font-size: 2.8rem;
    font-style: italic;
    margin: 0px;
    text-shadow: 2px 3px #126306;
    font-family: var(--ff-base);
    font-weight: 800;
  }

  span.currency {
    font-size: 1rem;
  }

  p.conditions {
    color: white;
    font-family: var(--ff-base);
    font-size: 2.4rem;
    font-weight: var(--ff-baseWght-800);
    margin: 0px;
    font-style: italic;
  }

  .promo__wrapper h2.blue {
    color: #141E46;
  }

@media screen and (width >= 1150px) {
    :global(.overlay) {
      width: 50%;
    }
    
    :global(.overlay > .wrapper) {
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: center;
      height: 100%;
      width: 100%;
      bottom: 0px;
    }

    
    h2.number {
      font-size: 10rem;
    }
  
    .promo-items-wrapper p {
      font-size: 1.5rem;
    }

    h2.price {
      font-size: 3rem;
    }

    p.conditions {
      font-size: 2.4rem;
    }
  }


</style>