<script>

import { setTermsConditionPopUp, openTermsConditionsPopUp } from "@events/termConditionPopUp";

function showTermsConditionsPopUp() {
    document.querySelector(".terms-conditions-popup").classList.add("show");
    document.querySelector(".close-terms-conditions__zone").classList.add("show");
    document.querySelector("body").style.overflow = "hidden";
}

function closeTermsConditionsPopUp() {
    document.querySelector(".terms-conditions-popup").classList.remove("show");
    document.querySelector(".close-terms-conditions__zone").classList.remove("show");
    document.querySelector("body").style.overflow = "unset";
}

setTermsConditionPopUp("terms-conditions-popup");
openTermsConditionsPopUp(showTermsConditionsPopUp);

document.querySelector(".close-terms-conditions__zone").addEventListener(
    "click", closeTermsConditionsPopUp)
document.querySelector(".close_popup").addEventListener(
    "click", closeTermsConditionsPopUp)
</script>

