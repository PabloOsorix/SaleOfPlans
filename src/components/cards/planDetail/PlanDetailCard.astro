  margin: 10px 0px;
  font-size: 1.5rem;
  text-align: left;
  width: 100%;
}


p.information {
    font-family: var(--ff-base);
    color: var(--system-clr-primaryText);
    text-align: left;
    font-size: 0.9rem;
    font-weight: 500;
}

span.price__wrapper {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-style: italic;
}

h3.price__discount {
  color: #C1C5CB;
  text-decoration: line-through;
  margin: 0px;
  font-size: 1.6rem;
  font-weight: 300;
  text-align: right;
  width: 100%;
}

h2.price {
  margin: 0px;
  color: var(--system-primary-backgorundColor-2);
  margin-bottom: 0px;
  font-size: 2rem;
  font-weight: 700;
  text-align: right;
  width: 100%;
}

p.price__disclaimer {
    margin: 0px;
    color: var(--system-primary-backgorundColor-2);
    font-size: 0.8rem;
    text-align: right;
    justify-self: flex-end;
    width: 100%;
}

span.button__wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px;
    margin-top: 10px;
  }

a.button {
  text-decoration: none;
  width: 100%;
  padding: 7px 0px;
  color: white;
  font-weight: 600;
  text-align: center;
}

a.button.quotes {
  background: var(--system-primary-backgroundColor-1);

}

a.button.buy {
  background: var(--system-primary-backgorundColor-2);
}






@media screen and (width > 1250px) {

  promo-detail-card {
    flex-direction: row;
    align-items: center;
    width: 100%;
    gap: 50px;
    max-height: 290px;
    padding: 10px;
    box-shadow: none;
    max-width: unset;
  }

  .reverse-card {
    flex-direction: row-reverse;
  }

  .slider__wrapper {
    width: 40%;
  }

  li.splide__slide {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  li.splide__slide img {
    width: 100%;
    min-height: 261px;
    height: auto;
  }




  section.information__wrapper {
    width: 60%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  section.title-and-benefits {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  h2.plan-name.desk {
    display: block;
    margin-bottom: 5px;
  }

  h2.plan-name.mobile {
    display: none;
  }

  ul.benefits__list {
    gap: 5px;
  }


  
  section.terms-and-conditions {
    width: 100%;
  }

  p.information {
    font-size: 1rem;
  }

  section.price-and-button {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  span.price__wrapper {
    justify-content: space-between;
  }



  h3.price__discount {
    font-size: 1.8rem;
    font-weight: 300;
    text-align: left;
  }

