  color: var(--system-clr-primaryText);
}

h2.plan-name {
  color: var(--system-primary-backgroundColor-1);
  font-family: var(--ff-base);
  font-weight: 700;
}

h2.plan-name.desk {
  display: none;
  margin-bottom: 5px;
}

