---
import BaseLayout from "@layouts/BaseLayout.astro";
import BasicBanner from "@components/banner/BasicBanner.astro";
const mainBanner = "banners/home/palm-home-banner-cl-webp.webp";
---

<BaseLayout title="Planes">
  <BasicBanner image={mainBanner} class={"palm-banner"}>
    <span class="title__cont">
      <h2 class="title">Plancitos.com</h2>
      <h3 class="sub-title">
        Tu plan: <span>FÃ¡cil - Rapido - Sin rollos</span>
      </h3>
    </span>
  </BasicBanner>
  <h2 class="terms-title">Terminos y condiciones</h2>

  <style>
    section.plan-detailed__list {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    img.palm-banner {
      filter: brightness(0.8);
      object-fit: cover;
    }

    span.title__cont {
      grid-column: 2;
      grid-row: 2;

      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: center;
    }

    .title {
      color: white;
      font-size: 3rem;
      font-family: var(--ff-base);
      font-weight: 700;
      margin: 0px;
      -webkit-text-stroke: thin;
    }
    .sub-title {
      margin: 0px;
      text-align: left;
      font-family: var(--ff-base-2);
      font-style: italic;
      color: white;
    }
    .sub-title span {
      color: white;
    }

    .terms-title {
      color: var(--system-primary-backgroundColor-1);
      font-size: 1.8rem;
      font-family: var(--ff-base);
      font-weight: 600;
      margin: 10px 0px;
      text-align: center;
      -webkit-text-stroke: thin;
    }

    @media screen and (width >= 720px) {
      img.palm-banner {
        object-fit: unset;
      }

      span.title__cont {
        grid-column: 1/3;
        grid-row: 2;
        justify-content: center;
        padding-left: 3%;
      }

      .title {
        -webkit-text-stroke: medium;
      }
    }

    @media screen and (width >= 1150px) {
      img.palm-banner {
        object-fit: cover;
        mask-repeat: repeat;
      }
      span.title__cont {
        grid-column: 1/3;
        grid-row: 2;
      }

      .title {
        color: white;
        font-size: 6rem;
      }
    }
  </style></BaseLayout
>
