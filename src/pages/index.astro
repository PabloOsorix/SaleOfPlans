---
import BaseLayout from "@layouts/BaseLayout.astro";
import BasicBanner from "@components/banner/BasicBanner.astro";
import PromoListCard from "@components/cards/promoCards/PromoListCard.astro";
import PromoItemCard from "@components/cards/promoCards/PromoItemCard.astro";
const mainBanner = "banners/home/Hotel-Grand-Dubai-1.webp";
import * as benefits from "@data/plans/benefits.md";

---

<BaseLayout title="Home">
  <BasicBanner image="">
    <span class="title__cont">
      <h2 class="title">Plancitos.com</h2>
    </span>
  </BasicBanner>
  
  <PromoListCard>
    <PromoItemCard
      class=""
      title={"Plancito Familiar Pro"}
      category={"Express"}
      recommendation={4}
      price={350000}
      discountPercent={12}
      discountPrice={400000}
      buttonRedirect="https://api.whatsapp.com/send/?phone=%2B573232213828&text=Quiero%20Informacion%20del%20Plancito%20Familiar%20Pro&type=phone_number&app_absent=0"
      legalRestriction="*Aplica fines de semana sin festivo."
      benefits={benefits.frontmatter.familyPro}

      >
    </PromoItemCard>

    <PromoItemCard
      class=""
      title={"Plancito Familiar"}
      category={"Express"}
      recommendation={3.5}
      price={300000}
      discountPercent={10}
      discountPrice={330000}
      
      buttonRedirect="https://api.whatsapp.com/send/?phone=%2B573232213828&text=Quiero%20Informacion%20del%20Plancito%20Familiar&type=phone_number&app_absent=0"
      benefits={benefits.frontmatter.family}
      legalRestriction="*Aplica fines de semana sin festivo."
    >
    </PromoItemCard>


    <PromoItemCard
      class=""
      title={"Plancito Amigos"}
      category={"Express"}
      recommendation={4}
      price={620000}
      discountPercent={11}
      discountPrice={700000}
      buttonRedirect="https://api.whatsapp.com/send/?phone=%2B573232213828&text=Quiero%20Informacion%20del%20Plancito%20Amigos&type=phone_number&app_absent=0"
      benefits={benefits.frontmatter.friends}
      legalRestriction="*Aplica fines de semana sin festivo."
    >
    </PromoItemCard>

  </PromoListCard>
  
</BaseLayout>

<style>

  span.title__cont {
    grid-column: 2;
    grid-row: 2;
  }

  .title {
    color: white;
    font-size: 3rem;
    font-family: var(--ff-base);
    font-weight: 700;
    margin: 0px;
  }

  @media screen and (width >= 720px) {

  }

  @media screen and (width >= 1150px) {

    span.title__cont {
      grid-column: 2;
      grid-row: 2;
    }
    
    .title {
      color: white;
      font-size: 8rem;
    }
  }


</style>
